#open "naturals.def".

#define "bt x :=
  (x = nil);
  (sigma e\ l\ r\
    x = (tree e l r),
    bt l, bt r)".

#define "bt_equal x y :=
  (x = nil, y = nil);
  (sigma e1\ e2\ l1\ l2\ r1\ r2\
    e1 = e2,
    bt_equal l1 l2,
    bt_equal r1 r2)".

#define "bt_size x n :=
  (x = nil, n = o);
  (sigma e\ l\ r\ ls\ rs\ m\
    x = (tree e l r),
    bt_size l ls,
    bt_size r rs,
    plus ls rs m,
    n = (s m))".
